#tag Events Listbox1
	#tag Event
		Sub Open()
		  for each row as String in Array("han", "foo", "wa")
		    me.AddRow row
		  next
		End Sub
	#tag EndEvent
	#tag Event
		Sub Change()
		  NotificationCenter.Post(CurrentMethodName, me)
		End Sub
	#tag EndEvent
	#tag Event
		Sub Close()
		  //Removes all notification handlers that listen for notifications from me.
		  NotificationCenter.Remove(nil, "", me)
		End Sub
