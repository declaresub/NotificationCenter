		End Sub
	#tag EndEvent


	#tag Method, Flags = &h21
		Private Sub HandleListboxChanged(name as String, sender as Object, info as Dictionary)
		  dim L as Listbox = Listbox(sender)
		  TextField1.Text = L.Text
		End Sub
	#tag EndMethod


